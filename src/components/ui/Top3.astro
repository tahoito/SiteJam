---
import { PhotoCard } from "../index";
const items = [
  { label: "可愛い" },
  { label: "なんでも教えてくれる" },
  { label: "優しい" },
];
const photos = [
  {
    src: "/images/top3/1.jpeg",
    alt: "トップ3写真1",
  },
  {
    src: "/images/top3/2.jpeg",
    alt: "トップ3写真2",
  },
  {
    src: "/images/top3/3.jpeg",
    alt: "トップ3写真3",
  },
  {
    src: "/images/top3/4.png",
    alt: "トップ3写真4",
  },
];

const heart = "/images/heart.png";

---

<div class="mt-3" data-reveal-scope="top3">
  <div class="mx-auto flex w-full max-w-[1024px] flex-col p-5 md:flex-row md:items-stretch md:justify-between gap-10">
    <div class="w-full md:w-fit md:py-[43px] relative">
      <div class="space-y-[12px]">
        {items.map((item, index) => (
          <div
            class:list={[
              "top3-reveal flex w-full items-center gap-3 rounded-full border border-text bg-white px-2 py-2 md:w-[292px]",
              index === 1 ? "md:ml-18" : "",
              index === 2 ? "md:ml-36" : "",
            ]}
            data-reveal
            style={`--delay: ${index * 140}ms;`}
          >
            <span class="flex h-[44px] w-[44px] items-center justify-center rounded-full bg-main text-[20px]">
              {index + 1}
            </span>
            <span class="text-[20px]">{item.label}</span>
          </div>
        ))}
      </div>
      <img
        src={heart}
        alt=""
        aria-hidden="true"
        class="pointer-events-none absolute -left-1 bottom-20 hidden md:block md:w-[77px]"
      />
    </div>

    <div class="w-full hidden lg:flex flex-nowrap justify-between overflow-x-auto px-2 py-3 lg:flex-wrap lg:justify-start lg:h-[260px] lg:overflow-visible lg:px-0 lg:pt-0 lg:pb-0">
      <div class="flex items-center justify-start gap-[20px] lg:gap-[40px] w-full shrink-0">
        <PhotoCard photo={photos[0]} />
        <PhotoCard photo={photos[1]} />
      </div>
      <div class="flex items-center justify-end gap-[20px] lg:gap-[40px] w-full shrink-0 lg:-mt-10 -z-10">
        <PhotoCard photo={photos[2]} />
        <PhotoCard photo={photos[3]} />
      </div>
    </div>

    <div class="w-full flex lg:hidden overflow-x-auto gap-10 items-center">
      <PhotoCard photo={photos[0]} />
      <PhotoCard photo={photos[1]} />
      <PhotoCard photo={photos[2]} />
      <PhotoCard photo={photos[3]} />
    </div>
</div>
