---
const items = [
  { label: "可愛い" },
  { label: "なんでも教えてくれる" },
  { label: "優しい" },
];

const photos = [
  {
    src: "/images/top3/1.jpeg",
    alt: "トップ3写真1",
    className: "md:absolute md:top-0 md:left-0",
  },
  {
    src: "/images/top3/2.jpeg",
    alt: "トップ3写真2",
    className: "md:absolute md:top-0 md:left-[260px]",
  },
  {
    src: "/images/top3/3.jpeg",
    alt: "トップ3写真3",
    className: "md:absolute md:top-[118px] md:left-[120px]",
  },
  {
    src: "/images/top3/4.jpeg",
    alt: "トップ3写真4",
    className: "md:absolute md:top-[118px] md:left-[380px]",
  },
];

const heart = "/images/heart.png";
---

<div class="mt-2">
  <div class="flex flex-col gap-6 md:flex-row md:items-end md:gap-[70px]">
    <div class="relative w-full md:w-[292px]">
      <div class="space-y-3">
        {items.map((item, index) => (
          <div
            class:list={[
              "flex items-center gap-4 rounded-full border border-text bg-white px-4 py-2",
              index === 1 ? "md:ml-6" : "",
              index === 2 ? "md:ml-12" : "",
            ]}
          >
            <span class="flex h-11 w-11 items-center justify-center rounded-full  bg-main text-[20px]">
              {index + 1}
            </span>
            <span class="text-[20px]">{item.label}</span>
          </div>
        ))}
      </div>
      <img
        src={heart}
        alt=""
        aria-hidden="true"
        class="pointer-events-none absolute -left-1 -bottom-5 w-[56px] sm:w-[64px]"
      />
    </div>

    <div class="relative w-full md:w-[630px] md:h-[276px]">
      <div class="grid grid-cols-2 gap-3 md:block">
        {photos.map((photo) => (
          <div class={`rounded-[12px] border-2 border-[#FEE088] bg-white p-1 ${photo.className}`}>
            <div class="w-full overflow-hidden rounded-[12px] md:w-[220px] h-[139px]">
              <img src={photo.src} alt={photo.alt} class="h-full w-full object-cover" />
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</div>
