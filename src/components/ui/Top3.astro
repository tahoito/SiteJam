---
const items = [
  { label: "可愛い" },
  { label: "なんでも教えてくれる" },
  { label: "優しい" },
];

const photos = [
  {
    src: "/images/top3/1.jpeg",
    alt: "トップ3写真1",
    className: "z-10",
  },
  {
    src: "/images/top3/2.jpeg",
    alt: "トップ3写真2",
    className: "z-10",
  },
  {
    src: "/images/top3/3.jpeg",
    alt: "トップ3写真3",
    className: "md:translate-x-[100px] md:-translate-y-30",
  },
  {
    src: "/images/top3/4.png",
    alt: "トップ3写真4",
    className: "md:translate-x-[100px] md:-translate-y-30",
  },
];

---

<div class="mt-3">
  <div class="mx-auto flex w-full max-w-[1024px] flex-col gap-[36px] px-[20px] py-[20px] md:flex-row md:items-stretch md:justify-between md:gap-[102px]">
    <div class="relative w-full md:w-[292px] md:py-[43px]">
      <div class="space-y-[12px]">
        {items.map((item, index) => (
          <div
            class:list={[
              "flex w-full items-center gap-3 rounded-full border border-text bg-white px-2 py-2 md:w-[292px]",
              index === 1 ? "md:ml-18" : "",
              index === 2 ? "md:ml-36" : "",
            ]}
          >
            <span class="flex h-[44px] w-[44px] items-center justify-center rounded-full bg-main text-[20px]">
              {index + 1}
            </span>
            <span class="text-[20px]">{item.label}</span>
          </div>
        ))}
      </div>
      {/* heart removed */}
    </div>

    <div class="relative w-full md:w-[630px] md:h-[290px]">
      <div class="flex flex-nowrap justify-start gap-[10px] overflow-x-auto px-2 pt-2 pb-3 md:flex-wrap md:justify-start md:gap-[70px] md:overflow-visible md:px-0 md:pt-0 md:pb-0">
        {photos.map((photo) => (
          <div class={`h-[139px] w-[220px] shrink-0 rounded-[16px] border-5 border-[#FEE088] p-1 translate-x-2 translate-y-2 ${photo.className}`}>
                <div class="h-[139px] w-full -translate-x-6 -translate-y-6 overflow-hidden rounded-[12px] md:w-[220px]">
                <img src={photo.src} alt={photo.alt} class="h-full w-full object-cover" />
                </div>
            </div>
        ))}
      </div>
    </div>
  </div>
</div>
