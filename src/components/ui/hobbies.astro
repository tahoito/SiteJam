---
type HobbyItem = {
  title: string;
  description: string;
  image: string;
  alt?: string;
  border?: "primary" | "muted";
};

const { anys = [], delayBase = 0 } = Astro.props as { anys?: HobbyItem[]; delayBase?: number };
---

<div class="grid grid-cols-1 gap-6 justify-items-center md:grid-cols-3 md:justify-items-stretch">
  {anys.map((item, index) => (
    <div
      class="hobby-card relative w-[calc(100%-16px)] mx-auto"
      data-reveal
      style={`--delay:${delayBase + index * 140}ms`}
    >
      <div class="relative w-full rounded-[20px] bg-main px-6 py-6">
        <div class="flex items-start justify-between gap-2">
          <div class="hobby-text min-w-0">
            <div class="text-[20px] font-chiru">{item.title}</div>
            <p class="text-[16px]">{item.description}</p>
          </div>
          <img
            src={item.image}
            alt={item.alt ?? item.title}
            class="pointer-events-none shrink-0 opacity-90"
          />    
        </div>
      </div>
      <div
        class:list={[
          "hobby-outline absolute z-10 inset-0 rounded-[24px] border bg-transparent",
          item.border === "primary" ? "border-text/30" : "border-[#959595]",
        ]}
      ></div>
    </div>
  ))}
</div>
