---
type HobbyItem = {
  title: string;
  description: string;
  image: string;
  alt?: string;
  border?: "primary" | "muted";
};

const { anys = [], delayBase = 0 } = Astro.props as { anys?: HobbyItem[]; delayBase?: number };
---

<div class="grid grid-cols-1 gap-6 justify-items-center md:grid-cols-3 md:justify-items-stretch">
  {anys.map((item, index) => (
    <div
      class="hobby-card relative w-[calc(100%-16px)] mx-auto"
      data-reveal
      style={`--delay:${delayBase + index * 140}ms`}
    >
      <div class="relative w-full rounded-[20px] bg-main px-8 py-8">
        <div class="flex items-start justify-between gap-3">
          <div class="hobby-text min-w-0">
            <div class="text-[20px] font-chiru">{item.title}</div>
            <p class="text-[16px]">{item.description}</p>
          </div>
          <img
            src={item.image}
            alt={item.alt ?? item.title}
            class="pointer-events-none shrink-0 opacity-90"
          />
        </div>
      </div>
      <div
        class:list={[
          "hobby-outline absolute z-10 inset-0 rounded-[24px] border bg-transparent",
          item.border === "primary" ? "border-text/30" : "border-[#959595]",
        ]}
      ></div>
    </div>
  ))}
</div>

<style>
  .hobby-card {
    opacity: 0;
    transform: translateY(-26px);
    will-change: transform, opacity;
  }

  .hobby-outline {
    opacity: 0;
    transform: translate(0, 0);
    will-change: transform, opacity;
  }

  .hobby-text {
    opacity: 0;
    transform: translateY(-6px);
    will-change: transform, opacity;
  }

  .hobby-card.is-visible {
    animation: hobby-drop 900ms cubic-bezier(0.22, 1, 0.36, 1) forwards;
    animation-delay: var(--delay, 0ms);
  }

  .hobby-card.no-animate,
  .hobby-card.no-animate .hobby-outline,
  .hobby-card.no-animate .hobby-text {
    opacity: 1;
    transform: none;
    animation: none;
  }

  .hobby-card.is-visible .hobby-outline {
    animation: hobby-shift 520ms cubic-bezier(0.22, 1, 0.36, 1) forwards;
    animation-delay: calc(var(--delay, 0ms) + 420ms);
  }

  .hobby-card.is-visible .hobby-text {
    animation: hobby-text-in 700ms cubic-bezier(0.22, 1, 0.36, 1) forwards;
    animation-delay: calc(var(--delay, 0ms) + 520ms);
  }

  @keyframes hobby-drop {
    0% {
      opacity: 0;
      transform: translateY(-26px) scale(0.98);
    }
    70% {
      opacity: 1;
      transform: translateY(6px) scale(1.01);
    }
    100% {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  @keyframes hobby-shift {
    to {
      opacity: 1;
      transform: translate(8px, 8px);
    }
  }

  @keyframes hobby-text-in {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .hobby-card,
    .hobby-outline,
    .hobby-text {
      opacity: 1;
      transform: none;
      animation: none;
    }
  }
</style>
