---
type HobbyItem = {
  title: string;
  description: string;
  image: string;
  alt?: string;
  border?: "primary" | "muted";
};

const { anys = [] } = Astro.props as { anys?: HobbyItem[] };
---

<div class="grid grid-cols-1 gap-6 justify-items-center md:grid-cols-3 md:justify-items-stretch">
  {anys.map((item) => (
    <div class="relative w-full">
      <div class="relative rounded-[20px] bg-main px-6 py-8">
        <div class="flex items-start justify-between gap-3">
          <div class="min-w-0">
            <div class="text-[20px] font-chiru">{item.title}</div>
            <p class="text-[16px]">{item.description}</p>
          </div>
          <img
            src={item.image}
            alt={item.alt ?? item.title}
            class="pointer-events-none shrink-0 opacity-90"
          />
        </div>
      </div>
      <div
        class:list={[
          "absolute z-10 inset-0 translate-x-0 translate-y-0 sm:translate-x-2 sm:translate-y-2 rounded-[24px] border bg-transparent",
          item.border === "primary" ? "border-text/30" : "border-[#959595]",
        ]}
      ></div>
    </div>
  ))}
</div>
