---
import Logo from "/src/assets/logo.svg";
import Menu from "/src/assets/menu.svg";
import X from "/src/assets/x.svg";
---

<header id="top" class="fixed left-0 top-0 z-50 w-full bg-base">
    <div class="mx-auto w-full max-w-5xl px-5 md:px-0">
        <div class="flex items-center justify-between gap-4 pt-[26px]">
            <a href="#top" class="shrink-0 hover:opacity-80">
                <Logo class="h-10 w-auto sm:h-12 md:h-17" />
            </a>

            <nav class="hidden md:flex flex-wrap items-center justify-end gap-x-10">
                <a href="#top" class="hover:opacity-60"><h3 class="text-2xl">Home</h3></a>
                <a href="#about" class="hover:opacity-60"><h3 class="text-2xl">About</h3></a>
                <a href="#work" class="hover:opacity-60"><h3 class="text-2xl">Work</h3></a>
                <a href="#life" class="hover:opacity-60"><h3 class="text-2xl">Life</h3></a>
                <a href="#contact" class="hover:opacity-60"><h3 class="text-2xl">Contact</h3></a>
            </nav>

            <details class="relative md:hidden">
                <summary
                class="list-none rounded-2xl p-2 hover:bg-black/5 focus:outline-none"
                aria-label="Open menu"
                >
                    <Menu class="h-11 w-11 text-text" />
                </summary>

                <div class="fixed inset-0 z-50 bg-base/95 backdrop-blur-sm">
                    <div class="mx-auto h-full w-full max-w-5xl px-5">
                        <div class="flex items-center justify-between pt-[26px]">
                            <Logo class="h-8 w-auto" />
                            <button
                              type="button"
                              class="rounded-2xl p-2 hover:bg-black/5"
                              aria-label="Close menu"
                              onclick="this.closest('details')?.removeAttribute('open')"
                            >
                              <X class="h-9 w-9 text-text" />
                            </button>
                        </div>

                        <nav class="mt-12 flex flex-col gap-4 text-3xl">
                            <a class="hover:opacity-60" href="#top" onclick="this.closest('details')?.removeAttribute('open')">Home</a>
                            <a class="hover:opacity-60" href="#about" onclick="this.closest('details')?.removeAttribute('open')">About</a>
                            <a class="hover:opacity-60" href="#work" onclick="this.closest('details')?.removeAttribute('open')">Work</a>
                            <a class="hover:opacity-60" href="#life" onclick="this.closest('details')?.removeAttribute('open')">Life</a>
                            <a class="hover:opacity-60" href="#contact" onclick="this.closest('details')?.removeAttribute('open')">Contact</a>
                        </nav>
                    </div>
                </div>
            </details>
        </div>
    </div>
</header>
