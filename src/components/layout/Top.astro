---
const top = "/images/top.jpeg";
import Character from "/src/assets/character.svg";
---

<section
  id="top"
  class="relative mt-[80px] flex min-h-[800px] w-full items-center bg-[linear-gradient(180deg,#FAF4E3_3%,#F5E4E3_10%,#F5E4E3_89%,#FAF4E3_98%)] px-4 md:px-16"
>
  <div class="mx-auto flex w-full max-w-[1040px] flex-col items-center justify-between gap-12 py-20 md:flex-row">
    <div class="z-10 w-full lg:max-w-[500px]">
      <h1 class="text-5xl font-medium leading-[1.4] md:text-7xl">
        ゆるく、楽しく<br />
        奈々の<br />
        ポートフォリオ
      </h1>

      <p class="mt-12 font-chiru text-3xl text-text md:mt-20 md:text-[48px]">
        寝て、忘れよう。
      </p>
    </div>

    <div class="relative h-[400px] w-full max-w-[500px] md:h-[572px] lg:max-w-[600px]">
      <div class="blob h-full w-full overflow-hidden">
        <img src={top} alt="中山さんの写真" class="h-full w-full object-cover" />
      </div>
      <div class="absolute -bottom-4 -left-8 z-10 w-32 rotate-[-11.4deg] pointer-events-none md:w-48 lg:w-64">
        <Character class="h-auto w-full" />
      </div>
    </div>
  </div>
</section>

<style>
  @media (prefers-reduced-motion: no-preference) {
    .animate-hero-text {
      opacity: 0;
      transform: translateY(-48px);
      animation: slideDownFade 2600ms cubic-bezier(0.22, 1, 0.36, 1) forwards;
    }

    .animate-hero-image {
      opacity: 0;
      transform: translateY(16px) scale(0.94);
      animation: popIn 520ms cubic-bezier(0.16, 1, 0.3, 1) 2300ms forwards;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .animate-hero-text,
    .animate-hero-image {
      opacity: 1;
      transform: none;
      animation: none;
    }
  }

  @keyframes slideDownFade {
    from { opacity: 0; transform: translateY(-48px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes popIn {
    0% { opacity: 0; transform: translateY(16px) scale(0.94); }
    60% { opacity: 1; transform: translateY(0) scale(1.06); }
    100% { opacity: 1; transform: translateY(0) scale(1); }
  }

  .blob {
    border-radius: 58% 42% 65% 35% / 40% 60% 45% 55%;
    animation: blobMove 7s ease-in-out infinite;
    overflow: hidden;
  }
  @keyframes blobMove {
    0% { border-radius: 58% 42% 65% 35% / 40% 60% 45% 55%; }
    25% { border-radius: 40% 60% 35% 65% / 55% 45% 60% 40%; }
    50% { border-radius: 65% 35% 50% 50% / 45% 55% 40% 60%; }
    75% { border-radius: 50% 50% 60% 40% / 60% 40% 55% 45%; }
    100% { border-radius: 58% 42% 65% 35% / 40% 60% 45% 55%; }
  }

  @keyframes revealUp {
    from {
      opacity: 0;
      transform: translateY(-14px);
      filter: blur(2px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
      filter: blur(0);
    }
  }

  .reveal-up {
    opacity: 0;
    animation: revealUp 700ms cubic-bezier(0.22, 1, 0.36, 1) forwards;
    will-change: transform, opacity, filter;
  }

  .reveal-delay-1 {
    animation-delay: 120ms;
  }

  .reveal-delay-2 {
    animation-delay: 240ms;
  }

  /* アクセシビリティ：動き苦手な人は停止 */
  @media (prefers-reduced-motion: reduce) {
    .reveal-up {
      opacity: 1;
      animation: none;
      transform: none;
      filter: none;
    }
  }
</style>
