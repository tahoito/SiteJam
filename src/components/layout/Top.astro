---
const top = "/images/top.jpeg";
import Character from "/src/assets/character.svg";
---

<section
  id="top"
  class="relative mt-[80px] w-full bg-[linear-gradient(180deg,#FAF4E3_3%,#F5E4E3_10%,#F5E4E3_89%,#FAF4E3_98%)]"
>
  <div class="relative z-10 w-full px-[21px] py-[40px] md:px-[120px] md:py-[117px]">
    <div class="grid gap-10 md:grid-cols-2 md:items-start md:pt-[20px]">
      <div class="md:max-w-[730px]">
        <h1 class="text-[32px] md:text-7xl leading-[1.5] font-medium">
          ゆるく、楽しく<br />
          奈々の<br />
          ポートフォリオ
        </h1>

        <p class="text-[28px] mt-6 md:text-[48px] md:mt-20 text-text font-chiru">
          寝て、忘れよう。
        </p>
      </div>

      <div class="md:flex md:justify-end">
        <div class="relative w-full max-w-[340px] md:max-w-none md:w-[699px] h-[289px] md:h-[572px]">
          <div class="blob w-full h-full overflow-hidden">
            <img src={top} alt="Hero Image" class="w-full h-full object-cover" />
          </div>
          <div
            class="
              absolute left-0 bottom-0 z-10 pointer-events-none rotate-[-11.427deg]
              w-[90px] md:w-auto
            "
          >
            <Character class="h-full w-full" />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .blob {
    border-radius: 58% 42% 65% 35% / 40% 60% 45% 55%;
    animation: blobMove 7s ease-in-out infinite;
    overflow: hidden;
  }
  @keyframes blobMove {
    0% { border-radius: 58% 42% 65% 35% / 40% 60% 45% 55%; }
    25% { border-radius: 40% 60% 35% 65% / 55% 45% 60% 40%; }
    50% { border-radius: 65% 35% 50% 50% / 45% 55% 40% 60%; }
    75% { border-radius: 50% 50% 60% 40% / 60% 40% 55% 45%; }
    100% { border-radius: 58% 42% 65% 35% / 40% 60% 45% 55%; }
  }
</style>
