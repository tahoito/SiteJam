---
import { SectionTitle, SubTitle, Schedule, RodeMapContent, CurrentJob, Top3 } from "../index";
const { id } = Astro.props;
---

<section id={id}>
  <SectionTitle text="Work" />
  <SubTitle text="今の仕事" />
  <CurrentJob />
  <div class="flex flex-col my-8">
    <SubTitle text="1日のスケジュール" />
    <Schedule />
  </div>
  <div class="work-reveal" data-reveal style="--delay: 0ms;">
    <SubTitle text="これまでの歩み" />
  </div>
  <RodeMapContent />
  <div class="pt-3">
    <SubTitle text="中山さんの好きなところ ベスト3" />
    <Top3 />
  </div>
</section>
