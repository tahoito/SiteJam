---
import SectionTitle from "../ui/SectionTitle.astro";
import SubTitle from "../ui/SubTitle.astro";
const { id } = Astro.props;
---

<section id={id} data-reveal-scope="contact">
  <SectionTitle text="Contact" />
  <div class="py-3 grid grid-cols-1 gap-10 md:grid-cols-2 md:gap-[120px]">
    <div>
      <SubTitle text="連絡先" />
      <div class="mt-4 space-y-1 text-[16px] md:px-10 contact-info" data-reveal>
        <div class="grid grid-cols-[80px_1fr] items-center gap-6">
          <span>Tel</span>
          <span>050-1706-2803</span>
        </div>
        <div class="grid grid-cols-[80px_1fr] items-center gap-6">
          <span>Email</span>
          <span>xxxxxxxx@vantan.com</span>
        </div>
      </div>
    </div>
    <div>
      <SubTitle text="奈々からのメッセージ" />
      <p class="mt-4 text-[16px] font-chiru md:px-10 contact-message" data-reveal>
        元気じゃなくても大丈夫。<br />
        一緒に、楽しい時間を過ごそう。
      </p>
    </div>
  </div>
</section>

<style>
  .contact-info {
    opacity: 0;
    transform: translateY(-30px);
    will-change: transform, opacity;
  }

  .contact-message {
    opacity: 0;
    transform: translateY(-30px);
    will-change: transform, opacity;
  }

  .contact-info.is-visible {
    animation: contact-slide-in 1200ms cubic-bezier(0.19, 1, 0.22, 1) forwards;
    animation-delay: 200ms;
  }

  .contact-message.is-visible {
    animation: contact-slide-in 1400ms cubic-bezier(0.19, 1, 0.22, 1) forwards;
    animation-delay: 600ms;
  }

  @keyframes contact-slide-in {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .contact-info,
    .contact-message {
      animation: none;
      opacity: 1;
      transform: none;
    }
  }
</style>

<script is:inline>
  const contactSection = document.querySelector('section[data-reveal-scope="contact"]');
  if (contactSection) {
    const targets = contactSection.querySelectorAll("[data-reveal]");
    if (!("IntersectionObserver" in window)) {
      targets.forEach((el) => el.classList.add("is-visible"));
    } else {
      const observer = new IntersectionObserver(
        (entries, obs) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.classList.add("is-visible");
              obs.unobserve(entry.target);
            }
          });
        },
        { threshold: 0.25, rootMargin: "0px 0px -10% 0px" }
      );
      targets.forEach((el) => observer.observe(el));
    }
  }
</script>
