---
import SectionTitle from "../ui/SectionTitle.astro";
import SubTitle from "../ui/SubTitle.astro";
const { id } = Astro.props;
const memories = [
  { src: "/images/life/1.jpeg", alt: "思い出1", label: "兵庫の妖怪ペンギン" },
  { src: "/images/life/2.jpeg", alt: "思い出2", label: "長野のご当地パン" },
  { src: "/images/life/3.jpeg", alt: "思い出3", label: "友達と温泉旅行" },
  { src: "/images/life/4.jpeg", alt: "思い出4", label: "夏祭り" },
];
const tape = [
  { src: "/images/life/tape1.jpeg" }, 
  { src: "/images/life/tape2.jpeg" }, 
  { src: "/images/life/tape3.jpeg" }, 
  { src: "/images/life/tape4.jpeg" },
]
---

<section id={id}>
  <SectionTitle text="Life" />
  <div class="mt-4">
    <SubTitle text="奈々の思い出" />
    <div class="p-5">
      <div class="grid grid-cols-2 gap-5 md:grid-cols-4">
        {memories.map((item) => (
          <div class="rounded-[12px] border border-text/30 bg-white p-4">
            <div class="aspect-square overflow-hidden rounded-[4px]">
              <img src={item.src} alt={item.alt} class="h-full w-full object-cover pb-4" />
            </div>
            <p class="mt-5 text-center text-[16px] font-chiru py-3">{item.label}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
